{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "src/**/*.json", "./package.json", "index.ts",  "jest.config.js"],
  "exclude": ["node_modules", "dist"],
  "types": [ "@types/jest", "@types/node" ],
  "references": [
    {
      "path": "../sdk"
    },
    {
      "path": "../protocol"
    }
  ]
}
