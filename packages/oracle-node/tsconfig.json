{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2021"],
    "allowJs": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "./package.json",
    "manifests/**/*.json",
    "index.ts"
  ],
  "exclude": ["node_modules", "test"],
  "references": [
    {
      "path": "../protocol"
    },
    {
      "path": "../sdk"
    },
    {
      "path": "../oracles-smartweave-contracts"
    }
  ]
}
